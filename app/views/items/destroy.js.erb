<% if @item.destroyed? %>
   $('#item-<%= @item.id %>').hide();
   $('.flash').prepend("<div class='alert alert-success'>Way to go! You're one item closer to finshed.<button type='button' class='close' data-dismiss='alert'>&times;</button><%= flash.now[:notice] %></div>");
 <% else %>
   $('.flash').prepend("<div class='alert alert-danger'>There was an error deleting your item.<button type='button' class='close' data-dismiss='alert'>&times;</button><%= flash.now[:alert] %></div>");
 <% end %>
